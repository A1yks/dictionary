{
    "compilerOptions": {
        "lib": ["ESNext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "../build",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "baseUrl": "./src"
    },
    "exclude": ["node_modules"],
    "include": ["src"],
    "ts-node": {
        "files": true,
        "require": ["tsconfig-paths/register"]
    }
}
