{
    "compilerOptions": {
        "lib": ["es2015"],
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "build",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}
